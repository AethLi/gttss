<mapper namespace="cn.aethli.gttss.dao.TeacherMapper">
    <resultMap id="BaseResultMap" type="cn.aethli.gttss.domain.Teacher">
        <id column="userId" property="userId"/>
        <result column="name" property="name"/>
        <result column="unitId" property="unitId"/>
        <result column="status" property="status"/>
    </resultMap>
    <sql id="Base_From">
        Teacher
    </sql>
    <insert id="insertWithAll" parameterType="cn.aethli.gttss.domain.Teacher">
        INSERT INTO
        <include refid="Base_From"/>
        (`userId`, `name`, `unitId`,`status`)
        VALUES (#{userId}, #{name},#{unitId},#{status});
    </insert>
    <select id="selectById" parameterType="cn.aethli.gttss.domain.Teacher" resultMap="BaseResultMap">
        select * from
        <include refid="Base_From"/>
        where userId=#{userId};
    </select>
</mapper>